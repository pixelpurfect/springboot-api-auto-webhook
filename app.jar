package com.example.springbootautowebhook;

import org.springframework.boot.SpringApplication;
import org.springframework.boot.autoconfigure.SpringBootApplication;

@SpringBootApplication
public class SpringbootAutoWebhookApplication {

    public static void main(String[] args) {
        System.out.println("Spring Boot Application Started...");
        SpringApplication.run(SpringbootAutoWebhookApplication.class, args);
        simulateWebhookInteraction();
    }

    private static void simulateWebhookInteraction() {
        System.out.println("Simulating POST request to /generateWebhook...");
        // Simulating API call behavior
        try {
            Thread.sleep(2000); // simulate some delay
        } catch (InterruptedException e) {
            e.printStackTrace();
        }
        System.out.println("Simulated webhook response received.");
    }
}
